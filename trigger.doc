\par {\pntext\pard\plain\ltrpar \rtlch\fcs1 \af1 \ltrch\fcs0 \f1\insrsid13110295\charrsid13110295 \hich\af1\dbch\af0\loch\f1 3\tab}}\pard \ltrpar\ql \fi-360\li720\ri0\nowidctlpar\tx720\wrapdefault{\*\pn \pnlvlbody\ilvl0\ls3\pnrnot0\pndec\pnstart3\pnindent360 }
